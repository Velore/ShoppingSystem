<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ss.dao.UserMapper">

    <resultMap id="UserMap" type="User">
        <id property="userId" jdbcType="VARCHAR" column="user_id"/>
        <result property="username" jdbcType="VARCHAR" column="username"/>
        <result property="password" jdbcType="VARCHAR" column="password"/>
    </resultMap>

    <insert id="insertUser" parameterType="User">
        insert into shopping_system.user(user_id, username, password) VALUES (#{userId},#{username},#{password})
    </insert>

    <update id="updateUser" parameterType="User">
        update shopping_system.user set username=#{username},password=#{password}
        where user_id = #{userId}
    </update>

    <select id="queryUserByUserId" resultMap="UserMap">
        select * from shopping_system.user where user_id = #{userId}
    </select>

    <select id="queryUserLikeName" resultMap="UserMap">
        select * from shopping_system.user where username like concat('%',#{username},'%')
    </select>

</mapper>